

<div class="banner">
  <div class="banner-content">
    <h1>Best Cocktails</h1>
    <p>Discover the best cocktails in town</p>
    <h2><%= link_to "Add a new cocktail", new_cocktail_path(@cocktail), class: "btn btn-primary" %></h2>  </div>
</div>


<h1 class="text-center title">List of all cocktails</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4 col-md-3">
        <div class="card">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail), class: "card-title text-center"%></h2>
            <p><ul class="card-description">
              <% cocktail.doses.each do |dose| %>
                <li><strong><%= dose.ingredient.name.upcase %></strong> :
                <%= dose.description %></li>
              <% end %>
            </ul>
            </p>
          </div>
        </div>
      <% end %>
  </div>
</div>


