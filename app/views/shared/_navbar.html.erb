<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.jpg" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Search form -->
    <%= form_tag(cocktails_path, :method => "get", id: "search-form", class: "navbar-wagon-search") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search for a Cocktail", class: "navbar-wagon-search-input" %>
    <%= submit_tag "o", :name => nil, class: "navbar-wagon-search-btn" %>
    <% end %>

    <!-- Text link -->
    <%= link_to "Cocktails", cocktails_path, class: "navbar-wagon-button-unstyled" %>

    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <img src="http://placehold.it/50x50" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Profile</a></li>
          <li><a href="#">Dashboard</a></li>
          <li><a href="#">Log Out</a></li>
        </ul>
      </div>
    </div>

    <!-- Button (call-to-action) -->
    <%= link_to "Add a new cocktail", new_cocktail_path(@cocktail), class:"navbar-wagon-item navbar-wagon-button btn" %></div>

  <!-- Dropdown appearing on mobile only -->
  <div class="hidden-md hidden-lg">
      <%= form_tag(cocktails_path, :method => "get", id: "search-form", class: "navbar-wagon-search") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search for a Cocktail", class: "navbar-wagon-search-input" %>
    <%= submit_tag "o", :name => nil, class: "navbar-wagon-search-btn" %>
    <% end %>
  </div>

  <%= link_to "See all", cocktails_path, class: "navbar-wagon-button-unstyled hidden-md hidden-lg list-all" %>

  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Add a new cocktail", new_cocktail_path(@cocktail) %></div></li>
      </ul>
    </div>
  </div>
</div>
